import java.util.Scanner;

/**
 * Created by express on 15-Oct-15.
 */
public class ConvertDecimalToBase7 {
    public static void main(String[] args) {
        Scanner reader = new Scanner(System.in);

        int decimalNumber = reader.nextInt();
        String base7 = Integer.toString(decimalNumber, 7);

        System.out.println(base7);
    }
}
